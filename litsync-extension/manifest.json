{
  "manifest_version": 3,
  "name": "LitSync",
  "version": "8.1",
  "description": "Синхронизирует и конструирует промпты на основе локальных файлов.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "clipboardRead",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LitSync",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://aistudio.google.com/*"
      ],
      "js": [
        "responseShortener.js",
        "keep_active.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*.png",
        "icons/*.svg",
        "highlight.min.js",
        "atom-one-dark.min.css",
        "audio/*.ogg"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}